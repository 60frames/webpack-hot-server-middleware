{
  "name": "webpack-hot-server-middleware",
  "version": "0.0.5",
  "description": "Hot updates Webpack bundles on the server",
  "main": "dist",
  "scripts": {
    "start": "npm run build -- --watch",
    "build": "babel src --out-dir dist",
    "test": "jest",
    "typecheck": "flow",
    "publish": "npm run build && npm publish",
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/test/support/setup.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/60frames/webpack-hot-server-middleware.git"
  },
  "author": {
    "name": "Richard Scarrott",
    "email": "rich@60fram.es"
  },
  "license": "MIT",
  "dependencies": {
    "debug": "^2.2.0",
    "require-from-string": "^1.2.1",
    "source-map-support": "^0.4.2"
  },
  "peerDependencies": {
    "webpack": "*"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-jest": "^15.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-istanbul": "^2.0.3",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-preset-es2015": "^6.16.0",
    "coveralls": "^2.11.14",
    "express": "^4.14.0",
    "flow-bin": "^0.33.0",
    "jest": "^15.1.1",
    "supertest": "^2.0.0",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.8.3"
  }
}
